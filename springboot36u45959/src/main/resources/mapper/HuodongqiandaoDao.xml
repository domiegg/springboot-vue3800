<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.HuodongqiandaoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.HuodongqiandaoEntity" id="huodongqiandaoMap">
        <result property="qiandaobianhao" column="qiandaobianhao"/>
        <result property="huodongmingcheng" column="huodongmingcheng"/>
        <result property="huodongleixing" column="huodongleixing"/>
        <result property="jifen" column="jifen"/>
        <result property="tupian" column="tupian"/>
        <result property="qiandaoshijian" column="qiandaoshijian"/>
        <result property="xueshengzhanghao" column="xueshengzhanghao"/>
        <result property="xueshengxingming" column="xueshengxingming"/>
        <result property="banji" column="banji"/>
        <result property="xueshengjifen" column="xueshengjifen"/>
        <result property="jiaoshigonghao" column="jiaoshigonghao"/>
        <result property="jiaoshixingming" column="jiaoshixingming"/>
        <result property="longitude" column="longitude"/>
        <result property="latitude" column="latitude"/>
        <result property="fulladdress" column="fulladdress"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.HuodongqiandaoVO" >
		SELECT * FROM huodongqiandao  huodongqiandao         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.HuodongqiandaoVO" >
		SELECT  huodongqiandao.* FROM huodongqiandao  huodongqiandao 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.HuodongqiandaoView" >

		SELECT  huodongqiandao.* FROM huodongqiandao  huodongqiandao 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.HuodongqiandaoView" >
		SELECT * FROM huodongqiandao  huodongqiandao <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM huodongqiandao
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM huodongqiandao
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM huodongqiandao
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM huodongqiandao
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM huodongqiandao
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>




</mapper>
